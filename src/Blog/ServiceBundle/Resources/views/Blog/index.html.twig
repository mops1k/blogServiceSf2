{% extends 'BlogServiceBundle:Layout:base.html.twig' %}

{% block content -%}
    <h1>Список ваших новостей</h1>

    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>Заголовок</th>
                <th>Содержание</th>
                <th>Дата публикации</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td><a href="{{ path('profile_blog_show', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
                <td>{{ entity.content|slice(0,300) }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <div class="btn-group" role="group" aria-label="...">
                        <a class="btn btn-default" href="{{ path('profile_blog_show', { 'id': entity.id }) }}">Просмотр</a>
                        <a class="btn btn-default" href="{{ path('profile_blog_edit', { 'id': entity.id }) }}">Редактировать</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
    <a class="btn btn-success" href="{{ path('profile_blog_new') }}">
        Добавить запись
    </a>
    {{ dump(pagination) }}
{% endblock %}
