{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
    <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
    <p>Зовут: {{ user.realname }}</p>
    <p>Название блога: {{ user.blogName }}</p>
    <p>Записей в блоге: {{ user.posts|length }}</p>
    <p><a class="btn btn-default" href="{{ path('profile_blog') }}">Управление блогом</a></p>
</div>
